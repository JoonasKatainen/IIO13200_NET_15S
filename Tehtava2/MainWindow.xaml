<Window x:Class="Tehtava2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button" Content="Draw" HorizontalAlignment="Left" Margin="110,78,0,0" VerticalAlignment="Top" Width="75" Click="drawbutton_Click"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="372,24,0,0" VerticalAlignment="Top" Width="120" Loaded="comboBox_Loaded"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="140" Margin="110,141,0,0" VerticalAlignment="Top" Width="153"/>
        <TextBox x:Name="maara" HorizontalAlignment="Left" Height="23" Margin="372,65,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120" PreviewTextInput="maara_PreviewTextInput"/>
        <Button x:Name="clearbutton" Content="Clear" HorizontalAlignment="Left" Margin="222,88,0,0" VerticalAlignment="Top" Width="75" Click="clearbutton_Click"/>
        <Button x:Name="closebutton" Content="Close" HorizontalAlignment="Left" Height="27" Margin="334,272,0,0" VerticalAlignment="Top" Width="84" Click="closebutton_Click"/>

    </Grid>
</Window>
